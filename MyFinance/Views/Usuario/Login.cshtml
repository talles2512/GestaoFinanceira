@model UsuarioModel

@{
    Layout = "_LayoutLogin";


}

<div class="container" style="background-color: rgba(217, 217, 217, 0.78); border-radius: 10px; padding: 15px; width: 400px">
    @{
        try
        {
            if (TempData["MensagemLoginInvalido"].ToString() != "")
            {
                <div class="alert alert-danger">
                    <strong>Atenção!</strong> @TempData["MensagemLoginInvalido"]
                </div>
            }
        }
        catch { }
    }
    <form asp-controller="Usuario" asp-action="ValidarLogin">
        <div>
            <div class="form-group">
                <label for="email">Email:</label>
                <input type="email" class="form-control" asp-for="Email">
            </div>
            <div class="form-group">
                <label for="pwd">Senha:</label>
                <input type="password" class="form-control" asp-for="Senha">
            </div>
            <div class="checkbox">
                <label><input type="checkbox"> Lembrar meu acesso</label>
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
            <button type="button" class="btn btn-default" onclick="location.href = '../../Usuario/Registrar'">Registrar</button>
        </div>
    </form>
</div>
